<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>
</head>

<body class="container">

  <header>
    <%- include('../partials/header'); %>
  </header>

  <main>
    <div class="row" style="margin-top: 10px;">
      <% coffeeData.forEach(item=> { %>
        <div class="col-md-4">
          <a href="./page2?id=<%= encodeURIComponent(item.id) %>&name=<%= encodeURIComponent(item.drinkName) %>" class="coffee-card"
            style="text-decoration: none; color: #333333; border-radius: 2rem">
            <img src="<%= item.drinkThumb %>" class="card-img-top" alt="<%= item.drinkName %>">
            <div class="card-body" style="background-color: azure;">
              <h4 class="card-title" style="text-align: center;">
                <%= item.drinkName %>
              </h4>
            </div>
          </a>
        </div>
        <% }); %>
    </div>
  </main>

  <footer>
    <%- include('../partials/footer'); %>
  </footer>

</body>

</html>